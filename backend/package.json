{
  "name": "notes-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"+(src|test)/**/*.ts\" --fix",
    "format": "prettier --log-level warn --write \"+(src|test)/**/*.ts\"",
    "test:src": "jest --roots \"<rootDir>/src\"",
    "test:ci": "jest --roots \"<rootDir>/src\" --ci",
    "test:src:watch": "jest --roots \"<rootDir>/src\" --watch",
    "test:src:cov": "jest  --roots \"<rootDir>/src\" --coverage",
    "test:e2e": "jest  --roots \"<rootDir>/test/e2e\"",
    "clean": "rimraf dist coverage",
    "clear-cache": "rimraf .turbo node_modules/.cache"
  },
  "dependencies": {
    "@apollo/server": "^4.10.2",
    "@nestjs/apollo": "^12.1.0",
    "@nestjs/common": "^10.3.7",
    "@nestjs/core": "^10.3.7",
    "@nestjs/graphql": "^12.1.1",
    "@nestjs/platform-express": "^10.3.7",
    "enhanced-exception": "^1.0.2",
    "express-rate-limit": "^7.2.0",
    "graphql": "^16.8.1",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "zod": "^3.22.4",
    "zod-validation-error": "^3.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.7",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^18",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.4.4"
  }
}
